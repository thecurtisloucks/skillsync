# Copy this file to .env and replace placeholder values with your actual secrets

# -------------------------------
# MySQL Database Configuration
# -------------------------------

# MySQL root user password (used internally by the container)
MYSQL_ROOT_PASSWORD=rootpassword

# MySQL database name
MYSQL_DATABASE=skillsync_db

# Application-specific database user
MYSQL_USER=skillsync_user

# Password for the application-specific database user
MYSQL_PASSWORD=skillsync_password

# -------------------------------
# Spring Boot Datasource Configuration
# -------------------------------

# JDBC URL for Spring Boot to connect to MySQL container
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/skillsync_db

# Database username for Spring Boot to connect
SPRING_DATASOURCE_USERNAME=skillsync_user

# Database password for Spring Boot to connect
SPRING_DATASOURCE_PASSWORD=skillsync_password